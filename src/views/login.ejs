<%- include('includes/head')%>
<%- include('includes/nav')%>
   <div class="container">
     <div class="row">
       <div class="col-lg-2"></div>

       <div class="col-lg-8 my-3">
         <h1 class=" text-center">Criar conta ou Logar</h1>
         <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

         <%- include('includes/messages')%>

         <div class="row">
           <div class="col-lg">
             <h4>Faça seu cadastro</h4>
              <p>Se você ainda não possui conta, preencha o formulário abaixo:</p>
             <form class="form-cadastro" action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value= <%= csrfToken %>>
              <div class="form-group">
                <label>Seu e-mail</label>
                <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
              </div>
              <div class="form-group my-2">
                <label>Sua senha </label>
                <input type="password" class="form-control" name="password" aria-describedby="emailHelp" placeholder="*********">
              </div>
              <button type="submit" class="btn btn-primary my-2">Cria conta</button>
            </form>
           </div>



           <div class="col-lg">
             <h4>Faça seu login</h4>
              <p>Se você já possui conta, faça login abaixo:</p><br>
             <form class="form-login" action="/login/login" method="POST">
              <input type="hidden" name="_csrf" value= <%= csrfToken %>>
              <div class="form-group">
                <label>Seu e-mail</label>
                <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
              </div>
              <div class="form-group my-2">
                <label>Sua senha </label>
                <input type="password" class="form-control" name="password" aria-describedby="emailHelp" placeholder="*********">
              </div>
              <button type="submit" class="btn btn-primary my-2">Entrar</button>
            </form>
           </div>
         </div>

       </div>

       <div class="col-lg-2"></div>
     </div>
   </div>
<%- include('includes/footer')%>
    