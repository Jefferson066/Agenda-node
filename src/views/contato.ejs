<%- include('includes/head')%>
<%- include('includes/nav')%>
   <div class="container">
     <div class="row">
       <div class="col-lg-2"></div>

       <div class="col-lg-8 my-3">
         <h1 class=" text-center">Contato</h1>
         <p class="text-center lead">Cadastrar Contato</p>
         
         <%- include('includes/messages')%>

            <% if (contato._id) { %>
              <form class="form-contato" action="/contato/edit/<%= contato._id %>" method="POST">
            <% } else {%>
                <form class="form-contato" action="/contato/register" method="POST">
            <% } %>

              <input type="hidden" name="_csrf" value= <%= csrfToken %>>
              <div class="form-group">
                <label>Nome</label>
                <input type="text" value="<%= contato.name %>" class="form-control" name="name" aria-describedby="emailHelp" placeholder=" Nome ">
              </div>
              <div class="form-group my-2">
                <label>Sobrenome</label>
                <input type="text" value="<%= contato.lastName %>" class="form-control" name="lastName" aria-describedby="emailHelp" placeholder=" Sobrenome ">
              </div>
              <div class="form-group my-2">
                <label>Email</label>
                <input type="email" value="<%= contato.email %>" class="form-control" name="email" aria-describedby="emailHelp" placeholder=" Email ">
              </div>
              <div class="form-group my-2">
                <label>Telefone</label>
                <input type="tel" value="<%= contato.telephone %>" class="form-control" name="telephone" aria-describedby="emailHelp" placeholder=" Telefone ">
              </div>
              <button type="submit" class="btn btn-primary my-2">Salvar</button>
            </form>
       </div>

       <div class="col-lg-2"></div>
     </div>
   </div>
<%- include('includes/footer')%>
    